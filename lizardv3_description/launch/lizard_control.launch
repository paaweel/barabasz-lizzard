<launch>
<!--Loading the yaml file and launching the controllers with the robot state publisher for the TF publication.    -->
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find lizardv3_description)/config/lizard_control.yaml" command="load"/>

    <!-- load the controllers -->
    <node
      pkg="controller_manager"
      name="controller_spawner"
      type="spawner"
      respawn="false"
      output="screen"
      ns="/barabasz"
      args="front_left_leg_1_position_controller
            front_right_leg_1_position_controller
            rear_right_leg_1_position_controller
            rear_left_leg_1_position_controller
            front_left_leg_2_position_controller
            front_right_leg_2_position_controller
            rear_right_leg_2_position_controller
            rear_left_leg_2_position_controller
            front_left_leg_3_position_controller
            front_right_leg_3_position_controller
            rear_right_leg_3_position_controller
            rear_left_leg_3_position_controller
            joint_state_controller"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node
      pkg="robot_state_publisher"
      name="robot_state_publisher"
      type="robot_state_publisher"
      respawn="false"
      output="screen">
      <remap
        from="/joint_states"
        to="/barabasz/joint_states"/>
    </node>

</launch>
